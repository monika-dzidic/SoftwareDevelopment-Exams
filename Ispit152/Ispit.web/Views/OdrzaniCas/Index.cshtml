@model OCIndexVM

<br />
<table class="table table-hover">
    <thead>
        <tr>
            <td>Datum</td>
            <td>Ak godina</td>
            <td>Predmet</td>
            <td>Prosjecna ocjena</td>
            <td>Broj prisutnih</td>
            <td>Akcija</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.OdrzaniCasovi)
        {
            <tr>
                <td>@item.Datum</td>
                <td>@item.AkademskaGodina</td>
                <td>@item.Predmet</td>
                <td>@item.ProsjecnaOcjena</td>
                <td>@item.BrojPrisutnih od @item.BrojURazredu</td>
                <td><a href="/OdrzaniCas/Uredi?OdrzaniCasId=@item.OdrzaniCasId">Uredi</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/OdrzaniCas/Dodaj?NastavnikId=@Model.NastavnikId" class="btn btn-default">Dodaj cas</a>