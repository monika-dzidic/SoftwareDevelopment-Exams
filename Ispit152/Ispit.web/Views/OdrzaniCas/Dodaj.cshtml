@model OCDodajVM

<br />
<form asp-action="Snimi">
    <input name="NastavnikId" value="@Model.NastavnikId" hidden/>
    Nastavnik <input name="Nastavnik" value="@Model.Nastavnik"/>
    <br />
    <br />

    Datum: <input name="Datum" type="date"/>
    <br />
    <br />

    Akademska godina: 
    <select name="AkademskaGodinaId">
        @foreach (var item in Model.AkademskeGodine)
        {
            <option value="@item.Value">@item.Text</option>
        }
    </select>
    <br />
    <br />

    Predmet: 
    <select name="PredmetId">
        @foreach(var item in Model.Predmeti)
        {
            <option value="@item.Value">@item.Text</option>
        }
    </select>
    <br />
    <br />

    <button type="submit" class="btn btn-default">Snimi</button>
</form>